  },
  {
    "action": "fill",
    "target": "#bgmFileInput",
    "value": "https://example.com/bgm.mp3",
    "note": "BGM URL（ダミー）"
  },
  {
    "action": "click",
    "target": ".tab-btn[data-tab=\"tab-video\"]",
    "note": "動画タブへ"
  },
  {
    "action": "check",
    "target": "#shortModeCheck",
    "note": "ショート動画モード ON"
  },
  {
    "action": "click",
    "target": "#videoGenerateBtn",
    "note": "動画生成開始"
  },
  {
    "action": "waitForSelector",
    "target": "#videoOpenBtn:not([disabled])",
    "state": "visible",
    "note": "生成完了まで待機（Open ボタン有効化待ち）"
  },
  {
    "action": "click",
    "target": "#videoUploadBtn",
    "note": "YouTube アップロード開始（サンプル）"
  },
  {
    "action": "waitForSelector",
    "target": "#videoLog",
    "state": "visible",
    "note": "アップロードログ表示を待機"
