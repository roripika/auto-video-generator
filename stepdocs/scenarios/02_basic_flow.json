  },
  {
    "action": "click",
    "target": "#settingsBtn",
    "note": "設定タブを開く"
  },
  {
    "action": "fill",
    "target": "#settingsApiKey",
    "value": "sk-xxxxx",
    "note": "OpenAI/Gemini など API Key（ダミー）"
  },
  {
    "action": "fill",
    "target": "#settingsPexelsKey",
    "value": "PEXELS_KEY",
    "note": "Pexels Key（ダミー）"
  },
  {
    "action": "fill",
    "target": "#settingsPixabayKey",
    "value": "PIXABAY_KEY",
    "note": "Pixabay Key（ダミー）"
  },
  {
    "action": "fill",
    "target": "#settingsYoutubeClientSecrets",
    "value": "/path/to/client_secret.json",
    "note": "YouTube client_secret.json パス（ダミー）"
  },
  {
    "action": "fill",
    "target": "#settingsYoutubeCredentials",
    "value": "/path/to/youtube_credentials.pickle",
    "note": "YouTube credentials.pickle パス（ダミー）"
  },
  {
    "action": "click",
    "target": "#settingsSaveBtn",
    "note": "設定保存"
  },
  {
    "action": "click",
    "target": ".tab-btn[data-tab=\"tab-script\"]",
    "note": "台本タブへ"
  },
  {
    "action": "select",
    "target": "#themeSelect",
    "value": "",
    "note": "テーマを選択（任意で既存テーマを選ぶ）"
  },
  {
    "action": "fill",
    "target": "#scriptBrief",
    "value": "暮らしに役立つ AI 活用事例を 3 つ紹介して。イントロとまとめも入れてください。",
    "note": "ブリーフを入力"
  },
  {
    "action": "check",
    "target": "#scriptShortAdjust",
    "note": "ショート調整 ON（ショート動画向け）"
  },
  {
    "action": "click",
    "target": "#aiGenerateBtn",
    "note": "AI 台本生成を実行"
  },
  {
    "action": "waitForSelector",
    "target": "#sectionList li",
    "state": "visible",
    "note": "セクション一覧が出るまで待機"
  },
  {
    "action": "click",
    "target": ".tab-btn[data-tab=\"tab-assets\"]",
    "note": "素材タブへ"
  },
  {
    "action": "fill",
    "target": "#assetKeywordInput",
    "value": "未来的な暮らしの風景",
